import java.util.Scanner;
public class ChangePassword {

	public static void main(String[] args) {
		final String PASSWORD = "pass";
		String passEntered;
		int code = 1;
		Scanner input = new Scanner(System.in);
		
		System.out.print("Enter Password: ");
		passEntered = input.next();
		
		if(passEntered.equals(PASSWORD)){
			code =PasswordChange();
		}
		else
			System.out.println("Invalid Password - access denied");
			
		if(code == 0){
			System.out.print("Password changed successfully");
		}
		else {
			System.out.print("Error - Password not changed!");
		}
			input.close();
	}
	
	public static int PasswordChange(){
		String newPass,reNewPass;
		int success;
		Scanner input = new Scanner(System.in);
		System.out.println("Welcome to Change Your Password!");
		System.out.print("Enter new password: ");
		newPass = input.next();
		System.out.print("Re-enter new password: ");
		reNewPass = input.next();

		if(reNewPass.equals(newPass)){
			success = 0;
			String s = new String(newPass);
			System.out.println("New password has " +s.length() +" charcters and first character is " + s.charAt(0));
		}
		else {
			success = 1;
			System.out.println("Verify of new Password failed");
		}
		input.close();
		return success;
	}	
}
